{
  "name": "action-diff-patch",
  "version": "1.0.0",
  "private": true,
  "description": "Prepare CONTEXT, FILES, DIFF by fetching PR .diff; fallback to git diff",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "ncc build -s src/index.ts -o dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ci": "vitest run --reporter=dot"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vercel/ncc": "^0.38.4",
    "typescript": "^5.4.0",
    "vitest": "^3.2.4"
  }
}
